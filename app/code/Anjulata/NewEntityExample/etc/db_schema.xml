<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_more_detail" onCreate="migrateDataFromAnotherTable(post_entity)" resource="default" engine="innodb" comment="Customer More Detail" >
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="customer_id"  nullable="true" comment="Customer Id" />
        <column xsi:type="varchar" name="title" length="30" nullable="true" comment="Post Title" />
        <column xsi:type="text" name="content"  nullable="true" comment="Content" />
        <column xsi:type="varchar" name="status" length="30" nullable="true" comment="Post Status" />
        <!-- Add more columns as needed -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="customer_extra_detail" resource="default" engine="innodb" comment="Customer More Detail">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="customer_id"  nullable="true" comment="Customer Id" />
        <column xsi:type="varchar" name="additional_contact_no" length="30" nullable="true" comment="Additional Contact no" />
        <column xsi:type="varchar" name="alternative_email"  nullable="true" comment="Alternative Email" />
        <column xsi:type="varchar" name="marital_status" length="30" nullable="true" comment="Marital Status" />
        <!-- Add more columns as needed -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
