<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Customer\Api\Data\AddressInterface">
        <attribute code="marital_status" type="string"/>
    </extension_attributes>
    <extension_attributes for="agento\Customer\Api\Data\AddressInterface">
        <attribute code="additional_contact_no" type="string">
            <join reference_table="customer_extra_detail"
                join_on_field="entity_id"
                reference_field="customer_id">
                <field column="additional_contact_no">additional_contact_no</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
